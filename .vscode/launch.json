    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            // "args":["static", "-p", "./", "-p", "/Users/clibing/go/src/github.com/clibing/knife"]
            "args": [
                "redis",
                "-H",
                "127.0.0.1:6379",
                "-c",
                "SET",
                "-k",
                "key1",
                "-v",
                "value1",
                "-e",
                "0",
                "-k",
                "key2",
                "-v",
                "value2",
                "-e",
                "30s"
            ]
        },
        {
            "name": "client http",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "client",
                "http",
                // "-d",
                // "admin=password",
                "-H",
                "Content-Type: application/x-www-form-urlencoded",
                "-u",
                "https://tool.linuxcrypt.cn/checkRemoteIp",
                // "--show-curl"
            ]
        },
        {
            "name": "client redis get",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "redis",
                "-H",
                "127.0.0.1:6379",
                "-H",
                "127.0.0.1:6379",
                "-c",
                "GET",
                "-k",
                "name",
                "-k",
                "root",
                "--sentinel",
                "name",
                "name password 1s",
                "name password 1s \" ss ff \"",
                "password 1"
            ]
        },
        {
            "name": "client http args",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "client",
                "http",
                "https://tool.linuxcrypt.cn/checkRemoteIp",
                "--show-curl",
                "-m",
                "POST",
                "-d",
                "{'name': 'admin'}",
                "-H",
                "Content-Type: applicaiton/json; charset=utf"
            ]
        },
        {
            "name": "client convert markdown",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "convert",
                "markdown",
                "<html><body><h1>Hello World</h1></body></html>",
            ]
        },
        {
            "name": "sign aes",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "sign",
                "aes",
                "-k",
                "ABCDEFGHIJKLMNOP",
                "-m",
                "CFB",
                "-d",
                "fd7e6fc0fd4e1b81d20c157d56b9e56a3b9df1abcd220d11c367c9626c8fd0de78c82814d346c51c",
            ]
        },
    ]
}